<h1>Tracks</h1>

{{#each tracks}}
    <div class="tracks-container">
        <div class="track-container">
            <h2>{{this.name}}</h2>
            {{#if this.preview_url}}
                <audio controls src={{this.preview_url}}></audio>
            {{else}}
                <h2>No Preview Available</h2>
            {{/if}}
        </div>
    </div> 
{{else}}
<h1 class="not-found">No Tracks Found</h1>
{{/each}}